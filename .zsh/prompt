#vim set ft=zsh

# custom prompt, gurl
function git_branch() {
    branch=$(git symbolic-ref HEAD 2> /dev/null | awk 'BEGIN{FS="/"} {print $NF}')
    if [[ $branch == "" ]]; then
        :
    else
        echo ' ('%F{red}$branch%f') '
    fi
}

autoload -U colors && colors
setopt prompt_subst
PROMPT='%(?.%F{green}âˆš.%F{red}?%?)%f %B%F{red}%n%b%F{blue}%f@%m%  %B%F{blue}%1~%f%b$(git_branch) %# '
