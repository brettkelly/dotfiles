alias cd="z"
alias vim="nvim"
alias ls="eza --icons=always"
alias ll="eza --icons=always -la"
alias dl="cd ~/Downloads"
alias de="cd ~/Desktop"
alias dev="cd ~/Development"
alias sc="cd ~/Development/Scratch/"
alias gd="cd /Volumes/GoogleDrive/My\ Drive"
alias oo="cd ~/Library/Mobile Documents/iCloud~md~obsidian/Documents/Main"
alias obs="cd ~/Library/Mobile Documents/iCloud~md~obsidian/Documents/Main && nvim ."
alias dt="cd ~/dotfiles"
alias gpom="git push origin master"
alias gitz="git archive --format zip --output \"\$(PWD).zip\" master -0"
alias gst="git status"
alias gcm="git commit -a -m "
alias h="history"
alias hg="history | grep"
alias szr="source ~/.zshrc"
alias c="clear"
alias grep="grep --color=auto"
alias cpssh="pbcopy < $HOME/.ssh/id_rsa.pub"
alias gdig="dig @8.8.8.8 +noall"
alias hlist="cat ~/.ssh/config | tail -n +3 | grep \"Host\s\""
alias res="cd $HOME && clear" # reset terminal
alias vh="sudo vim /etc/hosts"
alias fdns="sudo killall -HUP mDNDResponder"
alias wps="wpscan --url"
alias mmd="multimarkdown"
alias python=/usr/local/bin/python3 
alias bigfiles="du -ah . | sort -n -r | head -n 20"
alias cil="curl -IL"
alias killbt="sudo pkill bluetoothd"
alias brew="arch -arm64 brew"
alias ghrc="gh repo create --clone --private"

# view folders sorted by disk usage
alias folders='find . -maxdepth 1 -type d -print0 | xargs -0 du -hsk | sort -rn'

# quick navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
